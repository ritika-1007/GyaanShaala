<% layout('layouts/boilerplate')%>

    <div class="container-fluid mt-5 about-style" id="aboutid">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <h2 class="text-center main-heading">Your Feedback</h2>

                <div class="row">
                    <div class="col-md-6 col-12 mx-auto">
                        <form action="/feedback" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" aria-describedby="name" name="name"
                                    placeholder="Full Name">
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="text" class="form-control" id="year" aria-describedby="year" name="year"
                                    placeholder="Year">
                            </div>
                            <div class="mb-3">
                                <label for="feedback" class="form-label">Your Feedback</label>
                                <input type="text" class="form-control" id="feedback" aria-describedby="feedback"
                                    name="feedback" placeholder="Your Feedback">
                            </div>
                            <button type="submit" class="btn btn-success">Submit Feedback</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>